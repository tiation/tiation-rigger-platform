{
  "name": "@tiation/rigger-platform-mobile",
  "version": "1.0.0",
  "description": "React Native mobile app for Rigger Platform workforce management",
  "main": "index.js",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "cd android && ./gradlew clean && cd ../ios && xcodebuild clean",
    "clean:cache": "npx react-native start --reset-cache",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace RiggerPlatform.xcworkspace -scheme RiggerPlatform -configuration Release"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-native": "0.80.1",
    "@react-native/new-app-screen": "0.80.1",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-gesture-handler": "^2.14.1",
    "react-native-reanimated": "^3.6.2",
    "react-native-vector-icons": "^10.0.3",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-keychain": "^8.2.0",
    "@react-native-community/netinfo": "^11.2.1",
    "react-native-permissions": "^4.1.5",
    "react-native-image-picker": "^7.1.0",
    "react-native-maps": "^1.8.4",
    "react-native-geolocation-service": "^5.3.1",
    "react-native-push-notification": "^8.1.1",
    "react-native-fast-image": "^8.6.3",
    "react-native-modal": "^13.0.1",
    "react-native-toast-message": "^2.2.0",
    "axios": "^1.6.4",
    "socket.io-client": "^4.7.4",
    "react-hook-form": "^7.48.2",
    "yup": "^1.4.0",
    "@hookform/resolvers": "^3.3.2",
    "date-fns": "^3.0.6",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "19.0.0",
    "@react-native-community/cli-platform-android": "19.0.0",
    "@react-native-community/cli-platform-ios": "19.0.0",
    "@react-native/babel-preset": "0.80.1",
    "@react-native/eslint-config": "0.80.1",
    "@react-native/metro-config": "0.80.1",
    "@react-native/typescript-config": "0.80.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "react-native",
    "mobile",
    "rigger",
    "construction",
    "workforce-management",
    "ios",
    "android",
    "typescript"
  ],
  "author": "Tiation <contact@tiation.com>",
  "license": "MIT"
}